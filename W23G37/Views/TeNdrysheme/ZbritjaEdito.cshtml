@model W23G37.Controllers.TeNdryshemeController.TeNdryshmeViewModel

@{
    ViewData["Title"] = "Perditeso Zbritjen";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="ZbritjaEdito">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Zbritja.ZbritjaID" />
            <div class="form-group mb-3">
                <label asp-for="Zbritja.EmriZbritjes" class="control-label">Emri Zbritjes</label>
                <input asp-for="Zbritja.EmriZbritjes" class="form-control" />
                <span asp-validation-for="Zbritja.EmriZbritjes" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Zbritja.Zbritja" class="control-label"></label>
                <input asp-for="Zbritja.Zbritja" class="form-control" />
                <span asp-validation-for="Zbritja.Zbritja" class="text-danger"></span>
            </div>
            <div class="formaSelect mb-3">
                <label asp-for="Zbritja.LlojiZbritjes">Kohezgjatja</label>
                <select asp-for="Zbritja.LlojiZbritjes" class="form-control" required>
                    <option disabled value="">Zgjedhni Zbritjen</option>
                    <option value="1 Vjeqare">1 Vjeqare</option>
                    <option value="3 Vjeqare">3 Vjeqare</option>
                    <option value="Extra">Extra</option>
                </select>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" asp-action="ZbritjaIndex"><i class="fa-solid fa-arrow-left"></i></button>
                <button type="submit" class="btn btn-success"><i class="fa-solid fa-plus"></i></button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
