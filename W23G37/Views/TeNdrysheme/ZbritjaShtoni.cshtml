@model W23G37.Controllers.TeNdryshemeController.TeNdryshmeViewModel

@{
    ViewData["Title"] = "Shtoni Zbritjen e tarifave";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="ZbritjaShtoni">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Zbritja.EmriZbritjes" class="control-label">Lloji Zbritjes</label>
                <input asp-for="Zbritja.EmriZbritjes" class="form-control" />
                <span asp-validation-for="Zbritja.EmriZbritjes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zbritja.Zbritja" class="control-label">Zbritja %</label>
                <input asp-for="Zbritja.Zbritja" class="form-control" />
                <span asp-validation-for="Zbritja.Zbritja" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <button class="btn btn-primary" asp-action="ZbritjaIndex"><i class="fa-solid fa-arrow-left"></i></button>
                <button type="submit" class="btn btn-success"><i class="fa-solid fa-plus"></i></button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
