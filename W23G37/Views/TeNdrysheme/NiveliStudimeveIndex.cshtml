@model W23G37.Controllers.TeNdryshemeController.TeNdryshmeViewModel

@{
    ViewData["Title"] = "Niveli Studimeve";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show d-flex justify-content-between" role="alert" style="width: 90%;">
        <span>@TempData["Message"]</span>
        <button type="button" class="btn btn-close" data-dismiss="alert" aria-label="Close"></button>
    </div>
}

<p>
    <button class="btn btn-success" onclick="location.href='@Url.Action("ShtoniNivelinEStudimeve")'">Shtoni Nivelin e Studimeve <i class="fa-solid fa-plus"></i></button>
    <button class="btn btn-success" onclick="location.href='@Url.Action("VendosniNivelinEStudimeveNeDepartament")'">Caktoni Departamentin <i class="fa-solid fa-plus"></i></button>
</p>
<table class="tableStyle table table-striped">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Emri Nivelit
            </th>
            <th>
                Shkurtesa
            </th>
            <th>
                Data Krijimit
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.NiveliStudimeve)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NiveliStudimeveID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmriNivelitStudimeve)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShkurtesaEmritNivelitStudimeve)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataKrijimit)
                </td>
                <td>
                    <button class="btn btn-success" onclick="location.href='@Url.Action("DetajetNiveliStudimit", new { id=item.NiveliStudimeveID})'"><i class="fa-solid fa-circle-info"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>
