@model W23G37.Controllers.TeNdryshemeController.TeNdryshmeViewModel

@{
    ViewData["Title"] = "Shtoni Nivelin e Studimeve";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="ShtoniNivelinEStudimeve">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NiveliStudimit.EmriNivelitStudimeve" class="control-label">Niveli i Studimeve</label>
                <input asp-for="NiveliStudimit.EmriNivelitStudimeve" class="form-control" />
                <span asp-validation-for="NiveliStudimit.EmriNivelitStudimeve" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NiveliStudimit.ShkurtesaEmritNivelitStudimeve" class="control-label">Shkurtesa Emrit</label>
                <input asp-for="NiveliStudimit.ShkurtesaEmritNivelitStudimeve" class="form-control" />
                <span asp-validation-for="NiveliStudimit.ShkurtesaEmritNivelitStudimeve" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <button class="btn btn-primary" asp-action="NiveliStudimeveIndex"><i class="fa-solid fa-arrow-left"></i></button>
                <button type="submit" class="btn btn-success"><i class="fa-solid fa-plus"></i></button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
