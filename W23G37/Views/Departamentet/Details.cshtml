@model W23G37.Controllers.DepartamentetController.DepartamentetViewModel

@{
    ViewData["Title"] = "Te Dhenat e Departamentit";
}

<div style="display: flex; flex-direction: row;">
    <div style="flex: 1;">
        <table class="tableStyle table table-striped mt-4">
            <tr>
                <th>
                    ID:
                </th>
                <td>
                    @Html.DisplayFor(model => model.Departamenti.DepartamentiID)
                </td>
            </tr>
            <tr>
                <th>
                    Emri Departamentit:
                </th>
                <td>
                    @Html.DisplayFor(model => model.Departamenti.EmriDepartamentit)
                </td>
            </tr>
            <tr>
                <th>
                    Shkurtesa:
                </th>
                <td>
                    @Html.DisplayFor(model => model.Departamenti.ShkurtesaDepartamentit)
                </td>
            </tr>
        </table>

        <div>
            <button class="btn btn-primary" onclick="location.href='@Url.Action("Index")'"><i class="fa-solid fa-arrow-left"></i></button>
        </div>
    </div>
    <div style="margin-left: 1em; flex: 2;">
        <table class="tableStyle table table-striped mt-4">
            <thead>
                <tr>
                    <th colspan="3">
                        Lokacionet e akredituara per Departamentin
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var lokacioni in Model.Lokacionet)
                {
                    <tr>
                        <td>
                            <a class="DetajetLink" onclick="location.href='@Url.Action("Details", "Lokacionet", new { id=lokacioni.LokacioniID})'">@lokacioni.EmriLokacionit - @lokacioni.QytetiLokacionit</a>
                        </td>
                    </tr>

                }

            </tbody>

        </table>
    </div>

    <div style="margin-left: 1em; flex: 3;">
        <table class="tableStyle table table-striped mt-4">
            <thead>
                <tr>
                    <th colspan="3">
                        Lendet aktive per kete Departament
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var lenda in Model.Lendet)
                {
                    <tr>
                        <td>
                        <a class="DetajetLink" onclick="location.href='@Url.Action("Details", "Lendet", new { id=lenda.LendaID})'">@lenda.KodiLendes - @lenda.EmriLendes</a>
                        </td>
                    </tr>

                }

            </tbody>

        </table>
    </div>
    <div style="margin-left: 1em; flex: 4;">
        <table class="tableStyle table table-striped mt-4">
            <thead>
                <tr>
                    <th colspan="3">
                        Specializimet aktive per kete Departament
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.Specializimet.Count; i++)
                {
                    var specializimi = Model.Specializimet[i];
                    <tr>
                        <td>@(i + 1)</td>

                        <td>
                            <a class="DetajetLink" onclick="location.href='@Url.Action("SpecializimetPerDepartamentDetaje", "Afatet", new { id=specializimi.SpecializimiID})'">@specializimi.EmriSpecializimit</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
    <div style="margin-left: 1em; flex: 4;">
        <table class="tableStyle table table-striped mt-4">
            <thead>
                <tr>
                    <th colspan="3">
                        Nivelet e Studimit per kete Departament
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.NiveliStudimitDepartamentiList.Count; i++)
                {
                    var niveliStudimit = Model.NiveliStudimitDepartamentiList[i];
                    <tr>
                        <td>@(i + 1)</td>

                        <td>
                            <a class="DetajetLink" onclick="location.href='@Url.Action("DetajetNiveliStudimit", "Afatet", new { id=niveliStudimit.NiveliStudimeve.NiveliStudimeveID})'">@niveliStudimit.NiveliStudimeve.EmriNivelitStudimeve - @niveliStudimit.NiveliStudimeve.ShkurtesaEmritNivelitStudimeve</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
