@model W23G37.Controllers.DepartamentetController.DepartamentetViewModel

@{
    ViewData["Title"] = "Shtoni Departamentin";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Departamenti.EmriDepartamentit" class="control-label">Emri Departamentit</label>
                <input asp-for="Departamenti.EmriDepartamentit" class="form-control" />
                <span asp-validation-for="Departamenti.EmriDepartamentit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Departamenti.ShkurtesaDepartamentit" class="control-label">Shkurtesa Departamentit</label>
                <input asp-for="Departamenti.ShkurtesaDepartamentit" class="form-control" />
                <span asp-validation-for="Departamenti.ShkurtesaDepartamentit" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <button class="btn btn-primary" asp-action="Index"><i class="fa-solid fa-arrow-left"></i></button>
                <button type="submit" class="btn btn-success"><i class="fa-solid fa-plus"></i></button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
