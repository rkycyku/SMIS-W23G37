@model W23G37.Controllers.LokacionetController.LokacionetViewModel

@{
    ViewData["Title"] = "Shtoni Lokacionini";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Lokacioni.EmriLokacionit" class="control-label">Emri Lokacionit</label>
                <input asp-for="Lokacioni.EmriLokacionit" class="form-control" />
                <span asp-validation-for="Lokacioni.EmriLokacionit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lokacioni.ShkurtesaLokacionit" class="control-label">Shkurtesa Lokacionit</label>
                <input asp-for="Lokacioni.ShkurtesaLokacionit" class="form-control" data-val="true" data-val-required="Shkurtesa Lokacionit is required" / />
                <span asp-validation-for="Lokacioni.ShkurtesaLokacionit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lokacioni.AdresaLokacionit" class="control-label">Adresa</label>
                <input asp-for="Lokacioni.AdresaLokacionit" class="form-control" />
                <span asp-validation-for="Lokacioni.AdresaLokacionit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lokacioni.QytetiLokacionit" class="control-label">Qyteti</label>
                <input asp-for="Lokacioni.QytetiLokacionit" class="form-control" />
                <span asp-validation-for="Lokacioni.QytetiLokacionit" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <button class="btn btn-primary" asp-action="Index"><i class="fa-solid fa-arrow-left"></i></button>
                <button type="submit" class="btn btn-success"><i class="fa-solid fa-plus"></i></button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
