@model W23G37.Controllers.LokacionetController.LokacionetViewModel

@{
    ViewData["Title"] = "Shtoni Sallen";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="ShtoniSallat">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="formaSelect mb-3">
                <label asp-for="Lokacionet">Zgjedhni Lokacionin</label>
                <select asp-for="lokacioniZgjedhur" class="form-control">
                    <option disabled value="">Zgjedhni Lokacionin</option>
                    @foreach (var lokacioni in Model.Lokacionet)
                    {
                        <option value="@lokacioni.LokacioniID">@lokacioni.EmriLokacionit</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Salla.KapacitetiSalles" class="control-label">Kapaciteti Salles</label>
                <input asp-for="Salla.KapacitetiSalles" class="form-control" />
                <span asp-validation-for="Salla.KapacitetiSalles" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <button class="btn btn-primary" asp-action="IndexSallat"><i class="fa-solid fa-arrow-left"></i></button>
                <button type="submit" class="btn btn-success"><i class="fa-solid fa-plus"></i></button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
