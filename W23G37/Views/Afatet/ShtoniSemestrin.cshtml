@model W23G37.Controllers.AfatetController.AfatetViewModel

@{
    ViewData["Title"] = "Shtoni Semestrin";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="ShtoniSemestrin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="formaSelect">
                <label asp-for="NiveliStudimit">Niveli i Studimeve</label>
                <select asp-for="NiveliStudimeveZgjedhur" class="form-control" required>
                    <option disabled value="">Zgjedhni Departamentin</option>
                    @foreach (var item in Model.NiveliStudimeve)
                    {
                        <option value="@item.NiveliStudimeveID">@item.EmriNivelitStudimeve - @item.ShkurtesaEmritNivelitStudimeve</option>
                    }
                </select>
            </div>
            <div class="form-group mt-3 mb-3">
                <label asp-for="Semestri.NrSemestrit" class="control-label">Numri Semestrit</label>
                <input asp-for="Semestri.NrSemestrit" class="form-control" />
                <span asp-validation-for="Semestri.NrSemestrit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("SemestriIndex")'"><i class="fa-solid fa-arrow-left"></i></button>
                <button type="submit" class="btn btn-success"><i class="fa-solid fa-add"></i></button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
